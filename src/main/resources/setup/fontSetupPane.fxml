                     <font>
                        <Font size="15.0" />
                     </font>
                  </ToggleButton>
                  <ToggleButton fx:id="strikethroughButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="33.0" prefWidth="33.0" underline="true">
