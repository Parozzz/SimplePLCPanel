<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="stateNameLabel" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="STATE NAME!" />
      <TextArea fx:id="textArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="45.0" prefWidth="150.0" />
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0">
         <children>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="3.0">
               <children>
                  <ColorPicker fx:id="textColorPicker" prefWidth="50.0" />
                  <ComboBox fx:id="textSizeComboBox" editable="true" prefWidth="25.0" style="-fx-font-size: 10;" />
               </children>
            </VBox>
            <StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="2.0">
                     <children>
                        <ToggleButton fx:id="boldToggleButton" mnemonicParsing="false" prefHeight="15.0" prefWidth="15.0" text="B">
                           <padding>
                              <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0" />
                           </padding>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </ToggleButton>
                        <ToggleButton fx:id="italicToggleButton" mnemonicParsing="false" prefHeight="15.0" prefWidth="15.0" text="B">
                           <padding>
                              <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0" />
                           </padding>
                           <font>
                              <Font name="System Italic" size="12.0" />
                           </font>
                        </ToggleButton>
                        <ToggleButton fx:id="underlineToggleButton" mnemonicParsing="false" prefHeight="15.0" prefWidth="15.0" text="B" underline="true">
                           <padding>
                              <Insets bottom="-1.0" left="-1.0" right="-1.0" top="-1.0" />
                           </padding>
                        </ToggleButton>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
   </padding>
</HBox>
